                                                    <option value="CCU">Kolkata (CCU)</option>
                                                    <option value="PNQ">Pune (PNQ)</option>
                                                    <option value="AMD">Ahmedabad (AMD)</option>
                                                    <option value="JAI">Jaipur (JAI)</option>
                                                    <option value="GOI">Goa (GOI)</option>
                                                    <option value="COK">Kochi (COK)</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- Departure City -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Departure City <sup>*</sup></label>
                                            <select class="form-control" name="departure_city" required>
                                                <option value="">Select Departure City</option>
                                                <optgroup label="India">
                                                    <option value="DEL">Delhi (DEL)</option>
                                                    <option value="BOM">Mumbai (BOM)</option>
                                                    <option value="BLR">Bangalore (BLR)</option>
                                                    <option value="HYD">Hyderabad (HYD)</option>
                                                    <option value="MAA">Chennai (MAA)</option>
                                                    <option value="CCU">Kolkata (CCU)</option>
                                                    <option value="PNQ">Pune (PNQ)</option>
                                                    <option value="AMD">Ahmedabad (AMD)</option>
                                                    <option value="JAI">Jaipur (JAI)</option>
                                                    <option value="GOI">Goa (GOI)</option>
                                                    <option value="COK">Kochi (COK)</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- Name -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Name <sup>*</sup></label>
                                            <input type="text" class="form-control" name="full_name"
                                                placeholder="Enter your name" required>
                                        </div>
                                    </div>
                                    <!-- Phone -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Phone <sup>*</sup></label>
                                            <input type="tel" class="form-control" name="phone"
                                                placeholder="Phone Number" required>
                                        </div>
                                    </div>
                                    <!-- Email -->
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Email Id <sup>*</sup></label>
                                            <input type="email" class="form-control" name="email"
                                                placeholder="Email Address" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Agreement Checkbox -->
                            <div class="form-group form-check">
