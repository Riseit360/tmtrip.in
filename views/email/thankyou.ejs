<%- include('../partials/header.ejs') %>
    <%- include('../partials/topservice.ejs') %>
        <style>
            .thankyousec {
                position: relative;
                margin: 0 auto;
                padding: 150px 0 50px;
                display: inline-block;
                width: 100%;
                background: #f2f2f2;
            }

            .thankyousec .images {
                position: relative;
                margin: 0 auto 0px;
                padding: 0;
                display: block;
                width: max-content;
            }

            .thankyousec .images img {
                width: 100%;
                margin: 0 auto;
                padding: 0;
                display: block;
            }

            .thankyousec .whitboxsec {
                background: #fff;
                border-radius: 8px;
                padding: 50px;
                display: block;
                margin: 0 auto;
                width: 50%;
                border: 2px solid rgb(213, 215, 219);
                box-shadow: 1px 4px 10px #f5f5f5;
            }

            .thankyousec .textarea {
                text-align: center;
                margin: 0 auto;
            }

            .thankyousec .textarea a {
                background: #097634;
                padding: 10px 50px;
                border-radius: 5px;
                color: #fff;
                font-size: 15px;
                letter-spacing: 0.5px;
                margin-top: 10px;
                display: inline-block;
                margin-bottom: 0;
            }

            .thankyousec .textarea p {
                margin: 0;
                padding: 0;
                font-size: 15px;
                line-height: 25px;
                margin-bottom: 20px;
            }

            .thankyousec .whitboxsec h3 {
                font-size: 50px;
                font-weight: 800;
                margin: 40px 0px 30px;
                color: #ed3875;
            }

            @media (max-width: 1280px) {
                .thankyousec .whitboxsec {
                    padding: 30px 20px;
                    width: calc(100% - 20px);
                }

                .thankyousec .images img {
                    width: 50%;
                }

                .thankyousec .whitboxsec h3 {
                    font-size: 40px;
                    margin: 30px 0px 20px;
                }

                .thankyousec .textarea p {
                    font-size: 13px;
                    line-height: 25px;
                    margin-bottom: 10px;
                }

                .thankyousec .textarea a {
                    padding: 10px 30px;
                    font-size: 12px;
                    margin-top: 20px;
                    margin-bottom: 0;
                }
            }
        </style>

        <div class="thankyousec">
            <div class="container">
                <div class="row">
                    <div class="whitboxsec">
                        <div class="images">
                            <img src="/images/newsletter1.png" alt="">
                        </div>
                        <div class="textarea">
                            <h3>Thank You</h3>
                            <p>thank you for reaching out Your message just showed up in my inbox. Talk to you soon</p>
                            <a href="/">Back to home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <script>
            // Redirect to homepage after 5 seconds
            setTimeout(function () {
                window.location.href = "/";
            }, 2000);
        </script>




